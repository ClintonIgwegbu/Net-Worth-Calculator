<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/long_term_liability_table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp">

    <TableRow
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/rowColor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="@string/long_term"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:background="@color/rowColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_mortgage"
            android:theme="@style/Indent1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollar" />

        <EditText
            android:id="@+id/home_mortgage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@color/textboxColor"
            android:inputType="numberDecimal" />
    </TableRow>

    <TableRow
        android:layout_marginVertical="5dp"
        android:background="@color/rowColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_equity_loan"
            android:theme="@style/Indent1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollar" />

        <EditText
            android:id="@+id/home_equity_loan"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@color/textboxColor"
            android:inputType="numberDecimal" />
    </TableRow>

    <TableRow
        android:layout_marginVertical="5dp"
        android:background="@color/rowColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mortgages_on_rental_properties"
            android:theme="@style/Indent1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollar" />

        <EditText
            android:id="@+id/mortgages_on_rental_properties"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@color/textboxColor"
            android:inputType="numberDecimal" />
    </TableRow>

    <TableRow
        android:layout_marginVertical="5dp"
        android:background="@color/rowColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/car_loans"
            android:theme="@style/Indent1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollar" />

        <EditText
            android:id="@+id/car_loans"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@color/textboxColor"
            android:inputType="numberDecimal" />
    </TableRow>

    <TableRow
        android:layout_marginVertical="5dp"
        android:background="@color/rowColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/student_loans"
            android:theme="@style/Indent1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollar" />

        <EditText
            android:id="@+id/student_loans"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@color/textboxColor"
            android:inputType="numberDecimal" />
    </TableRow>

    <TableRow
        android:layout_marginVertical="5dp"
        android:background="@color/rowColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/life_insurance_policy_loans"
            android:theme="@style/Indent1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollar" />

        <EditText
            android:id="@+id/life_insurance_policy_loans"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@color/textboxColor"
            android:inputType="numberDecimal" />
    </TableRow>

    <TableRow
        android:layout_marginVertical="5dp"
        android:background="@color/rowColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other_long_term_debt"
            android:theme="@style/Indent1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollar" />

        <EditText
            android:id="@+id/other_long_term_debt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@color/textboxColor"
            android:inputType="numberDecimal" />
    </TableRow>

</TableLayout>